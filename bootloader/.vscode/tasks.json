{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Bootloader",
      "type": "shell",
      "command": "make -j4",
      "group": {"kind": "build", "isDefault": true},
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "Clean Bootloader",
      "type": "shell",
      "command": "make clean"
    },
    {
      "label": "Flash Bootloader (SWD)",
      "type": "shell",
      "command": "STM32_Programmer_CLI",
      "args": [
        "-c", "port=SWD",
        "-d", "build/h725_bootloader.bin", "0x08000000",
        "-v",
        "-rst"
      ]
    }
